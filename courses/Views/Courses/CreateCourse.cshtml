@model Course

<h1 class="alert alert-success text-center">Create Course</h1>

<div class="row">
    <form class="col-4" method="post" asp-controller="Courses" asp-action="AddCourse" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div>
            <label asp-for="CourseName"></label>
            <input type="text" asp-for="CourseName" class="form-control" />
            <span asp-validation-for="CourseName" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="TotalHours"></label>
            <input type="text" asp-for="TotalHours" class="form-control" />
            <span asp-validation-for="TotalHours" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="StartCourse"></label>
            <input type="date" asp-for="StartCourse" class="form-control" />
            <span asp-validation-for="StartCourse" class="text-danger"></span>
        </div>
    
         <div>
            <label asp-for="Cost"></label>
            <input type="text" asp-for="Cost" class="form-control" />
            <span asp-validation-for="Cost" class="text-danger"></span>
        </div>
         <div>
            <label asp-for="TeacherId"></label>
            <input type="text" asp-for="TeacherId" class="form-control" />
            <span asp-validation-for="TeacherId" class="text-danger"></span>
        </div>
     
        <button type="submit" class="btn btn-primary mt-2">Add</button>
    </form>
</div>
    <img src="" id="studImage" class="col-4 card" style="object-fit:contain" />
