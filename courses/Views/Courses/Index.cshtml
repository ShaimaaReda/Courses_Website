@model IEnumerable<Course>
<a asp-controller="Courses" asp-action="GetCreateView" class="btn btn-success mb-1">Create Courses</a>

<h1 class="alert alert-success">Courses List</h1>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d=>d.Id)</th>
                <th>@Html.DisplayNameFor(d=>d.CourseName)</th>
                <th>@Html.DisplayNameFor(d=>d.StartCourse)</th>
                <th>@Html.DisplayNameFor(d=>d.TotalHours)</th>
                <th>@Html.DisplayNameFor(d=>d.Cost)</th>
                <th>@Html.DisplayNameFor(d=>d.TeacherId)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.CourseName</td>
                    <td>@item.StartCourse</td>
                    <td>@item.TotalHours</td>
                    <td>@item.Cost</td>
                    <td>@item.TeacherId</td>

                    <td>
                        <a asp-controller="Courses" asp-action="GetDetailsView" asp-route-id="@item.Id" class="btn btn-outline-warning">
                            <i class="bi bi-list-ul"></i>
                        </a>
                    </td>

                    <td>
                        <a asp-controller="Courses" asp-action="GetEditView" asp-route-id="@item.Id" class="btn btn-outline-success">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                    </td>

                    <td>
                        <a asp-controller="Courses" asp-action="GetDeleteView" asp-route-id="@item.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
        @*<tfoot>
    <tr><th colspan="3" style="text-align:right">Total</th><th>@Model.Sum(dept => dept.AnnualBudget)</th></tr>
    </tfoot>*@
    </table>
}
else
{
    <h1 class="alert alert-danger text-center">There is no Courses to display.</h1>
}
