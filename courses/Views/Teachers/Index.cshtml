@model IEnumerable<Teacher>
<a asp-controller="Teachers" asp-action="GetCreateView" class="btn btn-success mb-1">Create Teachers</a>

<h1 class="alert alert-success">Teachers List</h1>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d=>d.Id)</th>
                <th>@Html.DisplayNameFor(d=>d.Name)</th>
                <th>@Html.DisplayNameFor(d=>d.Subject)</th>
                <th>@Html.DisplayNameFor(d=>d.Description)</th>
                <th>@Html.DisplayNameFor(d=>d.Email)</th>
                <th>@Html.DisplayNameFor(d=>d.Phone)</th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Subject</td>
                    <td>@item.Description</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    

                    <td>
                        <a asp-controller="Teachers" asp-action="GetDetailsView" asp-route-id="@item.Id" class="btn btn-outline-warning">
                            <i class="bi bi-list-ul"></i>
                        </a>
                    </td>

                    <td>
                        <a asp-controller="Teachers" asp-action="GetEditView" asp-route-id="@item.Id" class="btn btn-outline-success">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                    </td>

                    <td>
                        <a asp-controller="Teachers" asp-action="GetDeleteView" asp-route-id="@item.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
        @*<tfoot>
    <tr><th colspan="3" style="text-align:right">Total</th><th>@Model.Sum(dept => dept.AnnualBudget)</th></tr>
    </tfoot>*@
    </table>
}
else
{
    <h1 class="alert alert-danger text-center">There is no Teachers to display.</h1>
}